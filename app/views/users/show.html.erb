<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-lg-11 mx-lg-auto">
      <p id="notice"><%= notice %></p>
      <div class="card">
        <div class="card-body">
          <p>
            <strong>Name:</strong>
            <%= @user.name %>
          </p>

          <p>
            <strong>Email:</strong>
            <%= @user.email %>
          </p>

          <p>
            <strong>Address:</strong>
            <%= @user.address %>
          </p>

          <p>
            <strong>Contact:</strong>
            <%= @user.contact %>
          </p>

          <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary btn-lg' %>
          <%= link_to 'Back', users_path, class: 'btn btn-outline-primary btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>



